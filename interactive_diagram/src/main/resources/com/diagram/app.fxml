<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diagram.AppController">
    <center>
        <Pane fx:id="container">
            <children>
                <Canvas fx:id="linesCanvas" width="800.0" height="600.0" />
            </children>
        </Pane>
    </center>
    <top>
        <Button fx:id="addElementBtn" mnemonicParsing="false" onAction="#onAddElementButtonClick" text="Agregar Elemento" />
    </top>
</BorderPane>